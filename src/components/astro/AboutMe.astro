<!-- animation for the background -->
<script>
import { animate, onScroll, stagger } from 'animejs'
import Lenis from 'lenis'

const lenis = new Lenis({ autoRaf: true })

animate(".background", {
  translate: "0 0",
  duration: 500,
  ease: "inOutBounce",
  autoplay: onScroll({
    onEnterForward: () => {
      animate("#content header, #content p", {
    opacity: 1,
        translateY: 0,
  filter: "blur(0px)",
    delay: stagger(100, {
      start: 400,
    }),
    duration: 1000,
    easing: "easeOutExpo",
  })
    },
    enter: "enter+=80",
    onLeaveForward: () => {
                    animate(".bg-cell", {
                        backgroundColor: "rgba(255, 255, 255, 0.1)",
                        translate: "100% 0",
                        boxShadow: "0px 2px 5px rgba(198, 198, 198, 0.5)"
                    });
                }
  })
})

</script>