---
import { Icon } from "astro-icon/components";
const { title, progress, icon, skillsID } = Astro.props;
const iconTolowerCase = icon?.toLowerCase() || "home";
---

<div
	id={skillsID}
	class="skills-container flex flex-col gap-2 bg-gray-800 text-white p-4 rounded-2xl shadow-lg w-64"
	style="position: absolute; top: 50%; left: 50%; transform: translate(-250%, -250%); scale: 0.2"
>
	<!-- Header with icon + title -->
	<div class="flex items-center justify-center gap-3">
		<Icon name={`skill-icons:${iconTolowerCase}`} size={30} />
		<h3 class="text-xl font-semibold">{title}</h3>
	</div>

	<!-- Progress Bar -->
	<div class="flex items-center gap-2">
		<div class="flex-1 bg-gray-600 rounded-full h-3 overflow-hidden">
			<div
				id={`progress-${skillsID}`}
				class="h-3 bg-blue-400 transition-all duration-500"
				style={`width: ${progress}%;`}
			>
			</div>
		</div>
		<p class="text-sm font-medium">{progress}%</p>
	</div>
</div>

<script define:vars={skillsID}></script>
